@inherits umbraco.MacroEngines.DynamicNodeContext
@{

    var featuredPages = @Model.DescendantsOrSelf().Where("featuredPage");
    
    <!-- Features -->
    var count = 0;

    }

    @foreach (var item in featuredPages)
    {
        count += 1;

        if (count % 2 == 0)
        {
            <section class="section-colored">

                <div class="container">

                    <div class="row">
                        <article class="col-lg-6 col-md-6 col-sm-6">
                            <h2>@item.Name</h2>
                            <p>
                                @Library.StripHtml(Library.Truncate(item.GetPropertyValue("bodyTextShortIntroduction"), 500, true))
                            </p>
                            <p>
                                <a class="btn btn-lg btn-primary pull-right" role="button" href=@item.Url>Saiba mais</a>
                            </p>
                        </article>
                        <div class="col-lg-6 col-md-6 col-sm-6">
                            <img class="img-responsive" src="@item.image">
                        </div>
                    </div>
                    <!-- /.row -->

                </div>
                <!-- /.container -->

            </section>
        <!-- /.section-colored -->

        }

        else
        {

            <section class="section">

                <div class="container">

                    <div class="row">
                        <div class="col-lg-6 col-md-6 col-sm-6">
                            <img class="img-responsive" src="@item.image">
                        </div>
                        <article class="col-lg-6 col-md-6 col-sm-6">
                            <h2>@item.Name</h2>
                            <p>
                                @Library.StripHtml(Library.Truncate(item.GetPropertyValue("bodyTextShortIntroduction"), 500, true))
                            </p>
                            <p>
                                <a class="btn btn-lg btn-primary pull-right" role="button" href=@item.Url>Saiba mais</a>
                            </p>

                        </article>

                    </div>
                    <!-- /.row -->

                </div>
                <!-- /.container -->

            </section>
        <!-- /.section -->

        }

    }
