@inherits UmbracoTemplatePage

@if (CurrentPage.HideBanner == false)
{
	var link = CurrentPage.BannerLink.ToString();
	
    <!-- Banner -->
    <!-- Banner -->
    <section id="myCarousel" class="carousel slide">
        <!-- Indicators -->
        <ol class="carousel-indicators">
            <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
            <li data-target="#myCarousel" data-slide-to="1"></li>
            <li data-target="#myCarousel" data-slide-to="2"></li>
        </ol>

        <!-- Wrapper for slides -->
        <div class="carousel-inner">
            <div class="item active">
                <div class="fill" style="background-image:url('@CurrentPage.bannerBackgroundImage');"></div>
                <div class="carousel-caption">
                    <h2>@CurrentPage.bannerHeader</h2>
                </div>
            </div>
            <div class="item">
                <div class="fill" style="background-image: url('@CurrentPage.bannerBackgroundImage2');"></div>
                <div class="carousel-caption">
                    <h2>@CurrentPage.bannerHeader2</h2>
                </div>
            </div>
            <div class="item">
                <div class="fill" style="background-image: url('@CurrentPage.bannerBackgroundImage3');"></div>
                <div class="carousel-caption">
                    <h2>@CurrentPage.bannerHeader3</h2>
                </div>
            </div>
        </div>

        <!-- Controls -->
        <a class="left carousel-control" href="#myCarousel" data-slide="prev">
            <span class="icon-prev"></span>
        </a>
        <a class="right carousel-control" href="#myCarousel" data-slide="next">
            <span class="icon-next"></span>
        </a>
    </section>
    <!-- /Banner -->
    <!-- /Banner -->
}